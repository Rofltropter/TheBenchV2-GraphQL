<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uottawa.thebench">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.StartScreenActivity"
            android:label="@string/title_activity_start_screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.CreateChoreActivity"
            android:label="@string/title_activity_create_chore"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.ViewChoreActivity"
            android:label="@string/view_chore"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.AddPersonActivity"
            android:label="@string/title_activity_create_person"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.SelectProfileActivity"></activity>
        <activity android:name=".ui.AboutActivity"
            android:label="@string/about"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>