<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/person_avatar_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@drawable/random_avatar1" />

    <TextView
        android:id="@+id/person_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/person_avatar_image"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Person Name"
        android:textColor="@color/primaryText"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/person_subtitle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/person_name_text"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@+id/person_avatar_image"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:text="Admin" />

</RelativeLayout>